  </div>
  <div class="file is-normal is-centered is-boxed is-danger has-name">
    <label class="file-label">
      <input class="file-input" type="file" name="resume" />
      <span class="file-cta">
        <span class="file-icon">
          <i class="fas fa-upload"></i>
        </span>
        <span class="file-label"> Upload </span>
      </span>
      <span class="file-name"> img url </span>
    </label>
  </div>
  <div class="columns">
    <div class="column is-12">
      <input
        required
        type="text"
        id="form-control"
        class="form-control"
        placeholder="Title"
        value="<%= article.title %>"
      />
    </div>
  </div>
  <div class="columns">
    <div class="column is-12">
      <input
        id="form-control"
        type="text"
        class="form-control is-small"
        rows="3"
        placeholder="Caption"
        value="<%= article.description %>"
      />
    </div>
  </div>

  <div class="columns">
    <div class="column is-12">
      <textarea
      name="markdown"
        id="form-control markdown"
        class="is-large form-control has-fixed-size"
        placeholder="Markdown"
        rows="100"
        value=""
      > <%= article.markdown %></textarea>
    </div>
  </div>
  <div class="columns">
    <div class="column is-12">
      <button type="submit" class="btn btn-primary">
        <i class="fa fa-file" aria-hidden="true"></i> Save Draft
      </button>
      <button type="submit" class="btn btn-danger">
        <i class="fa fa-trash" aria-hidden="true"></i> Trash
      </button>
    </div>
  </div>
