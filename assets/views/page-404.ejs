<!-- header-main -->
<%- include("./layouts/header.ejs") %>

<!-- end header-main -->

<aside class="single-header">
  <div class="container">
    <div class="columns">
      <div class="column is-12 breadcrumbs">
        <p>
          <span>
            <a href="/">Home</a>
          </span>
          /
          <span>404 - Page not Found</span>
        </p>
      </div>
    </div>
  </div>
</aside>

<!-- main -->
<main class="main">
  <div class="container">
    <div class="columns content-body">
      <div class="column is-6">
        <div class="error-404">
          <h4>Oops, This Page Could Not Be Found!</h4>
          <div class="label">404</div>
        </div>
      </div>

      <div class="column is-6">
        <!-- sidebar -->
        <div class="sidebar">
          <div class="columns">
            <div class="column is-12">
              <form class="form-sidebar">
                <h6>
                  Can't find what you need? Take a moment and do a search below!
                </h6>
                <div>
                  <input
                    type="text"
                    class="form-control rounded-0"
                    placeholder="Search"
                  />
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-search"></i>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- end sidebar -->
      </div>
    </div>
  </div>
</main>
<!-- end main -->

<!-- footer -->
<%-include('./layouts/footer.ejs') %>

<!-- end footer -->
